<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="com.shaikh.databinding_kotlin.handler.OnClickHandlerInterface" />
        <variable
            name="viewModel"
            type="com.shaikh.databinding_kotlin.data.User" />
    </data>

    <RelativeLayout
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="5dp"
            android:id="@+id/layoutone"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:text="First Name"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


            <TextView
                android:textSize="18dp"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="@{viewModel.strFname}"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <LinearLayout
            android:layout_margin="5dp"
            android:layout_below="@+id/layoutone"
            android:id="@+id/layoutTwo"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:text="Last Name"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


            <TextView
                android:textSize="18dp"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="@{viewModel.strLname}"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_below="@+id/layoutTwo"
            android:id="@+id/layoutthree"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:text="Designation"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


            <TextView
                android:textSize="18dp"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="@{viewModel.strDesignation}"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_below="@+id/layoutthree"
            android:id="@+id/layoutfour"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:text="Salary"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


            <TextView
                android:textSize="18dp"
                android:textColor="#000000"
                android:padding="5dp"
                android:text="@{Integer.toString(viewModel.salary)}"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:text="Submit"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:onClick="@{(v)->handler.onClick(v)}"
            android:layout_below="@+id/layoutfour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</layout>